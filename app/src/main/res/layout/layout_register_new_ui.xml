<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/icon4"
        />

    <EditText
        android:id="@+id/reg_name"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/iv_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/reg_name"
        android:layout_alignStart="@+id/reg_name"
        android:layout_below="@+id/iv_user"
        android:layout_marginTop="22dp"
        android:text="Name"
        android:textColor="#FFB3B3B3"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/txt_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/reg_name"
        android:layout_alignStart="@+id/reg_name"
        android:layout_below="@+id/reg_name"
        android:layout_marginTop="22dp"
        android:text="Gender"
        android:textColor="#FFB3B3B3"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/radiobtn"
        android:layout_below="@+id/reg_name"
        android:layout_alignLeft="@+id/reg_name"
        android:layout_alignStart="@+id/reg_name"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp">
        <RadioButton
            android:id="@+id/rb_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:onClick="checkButton"
            android:checked="true"
            android:textColor="#FFB3B3B3"
            android:textSize="16sp"/>
        <RadioButton
            android:id="@+id/rb_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:onClick="checkButton"
            android:textColor="#FFB3B3B3"
            android:textSize="16sp"/>
        <RadioButton
            android:id="@+id/rb_others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Others"
            android:onClick="checkButton"
            android:textColor="#FFB3B3B3"
            android:textSize="16sp"/>
    </RadioGroup>

    <EditText
        android:id="@+id/reg_email"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/radiobtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        />

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/reg_name"
        android:layout_alignStart="@+id/reg_name"
        android:layout_below="@+id/radiobtn"
        android:layout_marginTop="22dp"
        android:text="Email"
        android:textColor="#FFB3B3B3"
        android:textSize="16sp" />



    <EditText
        android:id="@+id/reg_password"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/reg_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/txt_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/reg_name"
        android:layout_alignStart="@+id/reg_name"
        android:layout_below="@+id/reg_email"
        android:layout_marginTop="22dp"
        android:text="Password"
        android:textColor="#FFB3B3B3"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/reg_college"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/reg_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        />

    <TextView
        android:id="@+id/txt_college"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/reg_name"
        android:layout_alignStart="@+id/reg_name"
        android:layout_below="@+id/reg_password"
        android:layout_marginTop="22dp"
        android:text="College Name"
        android:textColor="#FFB3B3B3"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/reg_city"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/reg_college"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        />

    <TextView
        android:id="@+id/txt_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/reg_name"
        android:layout_alignStart="@+id/reg_name"
        android:layout_below="@+id/reg_college"
        android:layout_marginTop="22dp"
        android:text="City Name"
        android:textColor="#FFB3B3B3"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/reg_mobile"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/reg_city"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        />

    <TextView
        android:id="@+id/txt_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/reg_name"
        android:layout_alignStart="@+id/reg_name"
        android:layout_below="@+id/reg_city"
        android:layout_marginTop="22dp"
        android:text="Mobile Number"
        android:textColor="#FFB3B3B3"
        android:textSize="16sp" />
    <Button
        android:id="@+id/reg_btn"
        android:background="@drawable/login_btn_rectangle_pink"
        android:textColor="#ffffff"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/reg_mobile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Register" />
    </RelativeLayout>

</ScrollView>