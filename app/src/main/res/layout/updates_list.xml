<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        app:cardCornerRadius="50dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="8dp">
            <TextView
                android:id="@+id/announcement_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/captianmarvelfont"
                android:padding="2dp"
                android:text="ANNOUNCEMENT"
                android:textColor="#212121"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/announcement_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/captianmarvelfont"
                android:paddingLeft="1dp"
                android:text="13/12 7:00PM"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/announcement_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:lines="4"
                android:maxLines="4"
                android:fontFamily="@font/captianmarvelfont"
                android:padding="1dp"
                android:text="The opening ceremony has begun.Reach Main Audi asap!"
                android:textSize="10sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>